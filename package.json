{
  "name": "claude-desktop-linux",
  "version": "2.0.0",
  "description": "Native Claude.ai desktop application for Linux with full OAuth support",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --linux AppImage"
  },
  "keywords": ["claude", "ai", "anthropic", "desktop", "linux", "electron"],
  "author": {
    "name": "Claude Desktop Contributors",
    "email": "claude-desktop@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alduccino/claude-desktop-linux.git"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.claude.desktop",
    "productName": "Claude Desktop",
    "linux": {
      "target": "AppImage",
      "category": "Network",
      "desktop": {
        "Name": "Claude Desktop",
        "Comment": "Claude AI Desktop Application",
        "Categories": "Network;Chat;Office;",
        "Keywords": "AI;Assistant;Chat;Claude;"
      }
    }
  }
}
